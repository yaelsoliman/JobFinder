@model Project

<form id="ajaxForm" class="default-form" data-ajax="true" data-ajax-method="post" data-ajax-success="OnSuccessUpSert" data-ajax-failure="OnFailureUpSert" asp-controller="Projects" asp-action="Create" enctype="multipart/form-data">
    <div class="row">
        <div class="form-group col-lg-6 col-md-12">
            <label>Title</label>
            <input type="text" asp-for="Title" required placeholder="Title">
        </div>

        <div class="form-group col-lg-6 col-md-12">
            <label>Website</label>
            <input type="url" asp-for="Website" required placeholder="Website">
        </div>

        <div class="form-group col-lg-6 col-md-12">
            <label>From Date</label>
            <input type="date" asp-for="From" required placeholder="From">
        </div>
        <div class="form-group col-lg-6 col-md-12">
            <label>To Date</label>
            <input type="date" asp-for="To" placeholder="To">
        </div>

        <div class="form-group col-lg-6 col-md-12">
            <label>Description</label>
            <textarea asp-for="Description" placeholder="Description"></textarea>
        </div>
    </div>
</form>
