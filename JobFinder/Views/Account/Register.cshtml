@model RegisterRequest
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <title>Superio | Just another HTML Template | Register</title>

    <!-- Stylesheets -->
    <link href="~/css/bootstrap.css" rel="stylesheet">
    <link href="~/css/style.css" rel="stylesheet">
    <link href="~/css/responsive.css" rel="stylesheet">

    <link href="~/css/custom.css" rel="stylesheet">

    <link rel="shortcut icon" href="~/images/favicon.png" type="image/x-icon">
    <link rel="icon" href="~/images/favicon.png" type="image/x-icon">

    <!-- Responsive -->
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0">
    <!--[if lt IE 9]><script src="https://cdnjs.cloudflare.com/ajax/libs/html5shiv/3.7.3/html5shiv.js"></script><![endif]-->
    <!--[if lt IE 9]><script src="js/respond.js"></script><![endif]-->
</head>

<body>

    <div class="page-wrapper">

        <!-- Preloader -->
        <div class="preloader"></div>

        <!-- Main Header-->
        <div class="logo" style="position: absolute;top: 40px;left: 40px;z-index: 99;">
            <a href="index.html"><img src="~/images/logo-2.svg" alt="" title=""></a>
        </div>
        <!--End Main Header -->
        <!-- Info Section -->
        <div class="login-section">
            <div class="image-layer" style="background-image: url(/images/background/12.jpg);"></div>
            <div class="outer-box">
                <!-- Login Form -->
                <div class="login-form default-form">
                    <div class="form-inner">
                        <h3>Create a Free Superio Account</h3>

                        <!--Login Form-->
                        <form method="post" asp-controller="Account" asp-action="Register">
                            <div class="form-group">
                                <div class="btn-box row">
                                    <div class="col-lg-6 col-md-12">
                                        <div class="radio-button-role">
                                            <input id="Applicant" type="radio" asp-for="RoleType" checked value="@RoleType.Applicant" onchange="handleRadioButtonChange(this)" />
                                            <label class="theme-btn" for="Applicant"><i class="la la-user"></i> Applicant </label>
                                        </div>
                                    </div>
                                    <div class="col-lg-6 col-md-12">
                                        <div class="radio-button-role">
                                            <input id="Company" type="radio" asp-for="RoleType" value="@RoleType.Company" onchange="handleRadioButtonChange(this)" />
                                            <label class="theme-btn btn-style-four" for="Company"><i class="la la-briefcase"></i> Company </label>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-lg-6 col-md-12 mb-20" id="firstName">
                                    <div class="form-group">
                                        <input type="text" asp-for="FirstName" placeholder="First Name" required>
                                    </div>
                                </div>

                                <div class="col-lg-6 col-md-12 mb-20" id="lastName">
                                    <div class="form-group">
                                        <input type="text" asp-for="LastName" placeholder="Last Name" required>
                                    </div>
                                </div>

                                <div class="col-lg-6 col-md-12 mb-20">
                                    <div class="form-group">
                                        <input type="text" asp-for="UserName" placeholder="Username" required>
                                    </div>
                                </div>

                                <div class="col-lg-6 col-md-12 mb-20">
                                    <div class="form-group">
                                        <input type="email" asp-for="Email" placeholder="Email" required>
                                    </div>
                                </div>

                                <div class="col-lg-6 col-md-12 mb-20">
                                    <div class="form-group">
                                        <input type="password" asp-for="Password" placeholder="Password" required>
                                    </div>
                                </div>

                                <div class="col-lg-6 col-md-12 mb-20">
                                    <div class="form-group">
                                        <input type="password" asp-for="ConfirmPassword" placeholder="Confirm Password" required>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <button class="theme-btn btn-style-one " type="submit" name="Register">Register</button>
                            </div>
                        </form>
                    </div>
                </div>
                <!--End Login Form -->
            </div>
        </div>
        <!-- End Info Section -->


    </div><!-- End Page Wrapper -->


    <script src="~/js/jquery.js"></script>
    <script src="~/js/popper.min.js"></script>
    <script src="~/js/chosen.min.js"></script>
    <script src="~/js/bootstrap.min.js"></script>
    <script src="~/js/jquery-ui.min.js"></script>
    <script src="~/js/jquery.fancybox.js"></script>
    <script src="~/js/jquery.modal.min.js"></script>
    <script src="~/js/mmenu.polyfills.js"></script>
    <script src="~/js/mmenu.js"></script>
    <script src="~/js/appear.js"></script>
    <script src="~/js/ScrollMagic.min.js"></script>
    <script src="~/js/rellax.min.js"></script>
    <script src="~/js/owl.js"></script>
    <script src="~/js/wow.js"></script>
    <script src="~/js/script.js"></script>
    <script>
        function handleRadioButtonChange(radioButton) {
            var firstName = $('#firstName');
            var lastName = $('#lastName');
            if (radioButton.checked) {
                if (radioButton.value == "Company") {
                    lastName.hide().find('input').val(" ");
                    firstName.addClass('col-lg-12');
                } else {
                    firstName.removeClass('col-lg-12');
                    lastName.show().find('input').val("");
                }
            }
        }
    </script>
</body>

</html>